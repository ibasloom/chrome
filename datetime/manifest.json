{
    "manifest_version": 3,
    "name": "Time Zone Extension",
    "version": "1.0",
    "description": "Displays the current time in three different time zones.",
    "permissions": ["activeTab"],
    "action": {
      "default_popup": "popup.html"
    },
    "background": {
      "service_worker": "background.js"
    }
  }
  